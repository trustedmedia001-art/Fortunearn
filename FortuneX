<script>
let amount=0;

function goDashboard(){
    const name=document.getElementById("fullname").value;
    amount=document.getElementById("package").value;
    if(name==""||amount==""){alert("Fill all fields");return;}
    document.getElementById("userName").innerText=name;
    document.getElementById("register").classList.add("hidden");
    document.getElementById("dashboard").classList.remove("hidden");
}
function showPopup(){
    document.getElementById("popup").style.display="flex";
}
function goPayment(){
    document.getElementById("popup").style.display="none";
    document.getElementById("dashboard").classList.add("hidden");
    document.getElementById("payment").classList.remove("hidden");
    document.getElementById("amount").innerText=amount;
    document.getElementById("opayWarning").style.display="flex";
}
function closeOpay(){
    document.getElementById("opayWarning").style.display="none";
}
function confirmTelegram(){
    document.getElementById("tgConfirm").style.display="flex";
}
function closeTelegram(){
    document.getElementById("tgConfirm").style.display="none";
}
function openTelegram(){
    window.open("tg://resolve?domain=Coachceleste","_blank");
    setTimeout(()=>{window.open("https://t.me/Coachceleste","_blank")},1000);
}
</script>

